<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="/Areas/Admin/Content/setting.png" rel="icon" />
    <title>ADMIN - QLKS</title>
    <!-- Bootstrap Core CSS -->
    <link href="/Areas/Admin/Content/theme/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet">
    <!-- MetisMenu CSS -->
    <link href="/Areas/Admin/Content/theme/vendor/metisMenu/metisMenu.min.css" rel="stylesheet">
    <!-- Custom CSS -->
    <link href="/Areas/Admin/Content/theme/dist/css/sb-admin-2.css" rel="stylesheet">
    <!-- Custom Fonts -->
    <link href="/Areas/Admin/Content/theme/vendor/font-awesome/css/font-awesome.min.css" rel="stylesheet" type="text/css">
    <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
        <script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
        <script src="https://oss.maxcdn.com/libs/respond.js/1.4.2/respond.min.js"></script>
    <![endif]-->
    <!-- jQuery -->
    <script src="/Areas/Admin/Content/theme/vendor/jquery/jquery.min.js"></script>
    @RenderSection("style", false)
</head>
<body>
    <style>
        @@font-face {
            font-family: 'Roboto-Regular';
            src: url('/Areas/Admin/Content/fonts/Roboto-Regular.ttf') format('truetype');
        }

        body {
            font-family: Roboto-Regular !important;
        }
    </style>
    <div id="wrapper">
        <!-- Navigation -->
        <nav class="navbar navbar-default navbar-static-top" role="navigation" style="margin-bottom: 0">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="#">Admin - QLKS</a>
            </div>
            <!-- /.navbar-header -->
            <ul class="nav navbar-top-links navbar-right">
                <li class="dropdown">
                    <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                        <i class="fa fa-user fa-fw"></i>
                        <b>@(new WebQLKhachSan.Areas.Admin.Models.LoginHelper().GetTaiKhoan().HoTen)</b>
                        <i class="fa fa-caret-down"></i>
                    </a>
                    <ul class="dropdown-menu dropdown-user">
                        <li>
                            <a href="@Url.Action("EditInfo","TaiKhoan")"><i class="fa fa-user fa-fw"></i>Đổi thông tin cá nhân</a>
                        </li>
                        <li>
                            <a href="@Url.Action("DoiMatKhau","TaiKhoan")"><i class="fa fa-gear fa-fw"></i>Đổi mật khẩu</a>
                        </li>
                        <li class="divider"></li>
                        <li>
                            <a href="@Url.Action("Logout", "Login")"><i class="fa fa-sign-out fa-fw"></i>Đăng xuất</a>
                        </li>
                    </ul>
                    <!-- /.dropdown-user -->
                </li>
                <!-- /.dropdown -->
            </ul>
            <!-- /.navbar-top-links -->
            <div class="navbar-default sidebar" role="navigation">
                <div class="sidebar-nav navbar-collapse">
                    <ul class="nav" id="side-menu">
                        <li><a href="@Url.Action("Index", "TinhThanh")"><i class="fa fa-location-arrow"></i> Tỉnh thành</a></li>
                        <li><a href="@Url.Action("Index","KhachSan")"><i class="fa fa-building"></i> Khách sạn</a></li>
                        <li><a href="@Url.Action("Index", "Khachhang")"><i class="fa fa-user"></i> Khách hàng</a></li>
                        <li>
                            <a href="#"><i class="fa fa-user fa-home"></i> Đặt phòng<span class="fa arrow"></span></a>
                            <ul class="nav nav-second-level">
                                
                                <li><a href="@Url.Action("Index","DatPhong")"><i class="fa fa-university"></i> Danh sách hóa đơn</a></li>
                                <li><a href="@Url.Action("Index", "DangKiDatPhong")"><i class="fa fa-envelope"></i> Danh sách email đăng kí</a></li>
                            </ul>
                        </li>
                        <li>
                            <a href="#"><i class="fa fa-list fa-fw"></i> Danh mục<span class="fa arrow"></span></a>
                            <ul class="nav nav-second-level">
                                <li><a href="@Url.Action("Index","ChucVu")"><i class="fa fa-user-md"></i> Chức vụ</a></li>
                                <li><a href="@Url.Action("Index","Quyen")"><i class="fa fa-user-secret"></i> Quyền</a></li>
                                <li><a href="@Url.Action("Index","DichVu")"><i class="fa fa-recycle"></i> Dịch vụ</a></li>
                                <li><a href="@Url.Action("Index","LoaiPhong")"><i class="fa fa-home"></i> Loại phòng</a></li>
                                <li><a href="@Url.Action("Index","ViTri")"><i class="fa fa-location-arrow"></i> Vị trí</a></li>
                            </ul>
                        </li>
                        <li>
                            <a href="#"><i class="fa fa-book"></i> Báo cáo - thống kê<span class="fa arrow"></span></a>
                            <ul class="nav nav-second-level">
                                <li><a href="@Url.Action("Report","DatPhong")"><i class="fa fa-money"></i> Doanh thu</a></li>
                                <li><a href="@Url.Action("Report","DangKiDatPhong")"><i class="fa fa-envelope"></i> Đặt phòng qua email</a></li>
                            </ul>
                        </li>
                        <li>
                            <a href="#"><i class="fa fa-cog fa-fw"></i> Hệ thống<span class="fa arrow"></span></a>
                            <ul class="nav nav-second-level">
                                @if (new WebQLKhachSan.Areas.Admin.Models.LoginHelper().GetTaiKhoan().ChucVuObjectJoin.TenCV.ToUpper() == "ADMIN")
                                {
                                    <li><a href="@Url.Action("Index","PhanQuyen")"><i class="fa fa-user-secret"></i> Phân quyền</a></li>
                                }
                                <li><a href="@Url.Action("Index","TaiKhoan")"><i class="fa fa-user"></i>Tài khoản nhân viên</a></li>
                            </ul>
                        </li>
                        <!-- /.nav-second-level -->
                    </ul>
                </div>
                <!-- /.sidebar-collapse -->
            </div>
            <!-- /.navbar-static-side -->
        </nav>
        <!-- Page Content -->
        <div id="page-wrapper">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-lg-12">
                        @RenderBody()
                    </div>
                    <!-- /.col-lg-12 -->
                </div>
                <!-- /.row -->
            </div>
            <!-- /.container-fluid -->
        </div>
        <!-- /#page-wrapper -->
    </div>
    <!-- /#wrapper -->
    <!-- Bootstrap Core JavaScript -->
    <script src="/Areas/Admin/Content/theme/vendor/bootstrap/js/bootstrap.min.js"></script>
    <!-- Metis Menu Plugin JavaScript -->
    <script src="/Areas/Admin/Content/theme/vendor/metisMenu/metisMenu.min.js"></script>
    <!-- Custom Theme JavaScript -->
    <script src="/Areas/Admin/Content/theme/dist/js/sb-admin-2.js"></script>
    @RenderSection("script", false)
</body>
</html>
