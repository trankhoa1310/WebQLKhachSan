@model DTO.DichVuObject

@{
    string ViewName = Model.IDDichVu == 0 ? "Thêm mới Dịch vụ" : "Chỉnh sửa Dịch vụ";
    ViewBag.Title = ViewName;
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
<div class="panel panel-primary" style="margin-top: 15px">
    <div class="panel-heading">
        <b>@ViewName </b>
    </div>
    <div class="panel-body">

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            @Html.HiddenFor(q => q.IDDichVu)
            @Html.HiddenFor(q => q.IsDelete)

            <div class="form-horizontal">
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                <div class="form-group">
                    @Html.Label("Tên dịch vụ", new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.TextBoxFor(model => model.TenDichVu, new { @class = "form-control", required = "required", placeholder = "Khăn mặt" })
                    </div>
                </div>
                <div class="form-group">
                    @Html.Label("Trang thái", new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        <div class="checkbox">
                            <label>@Html.RadioButtonFor(q => q.Active, true, new { required = "required" }) Sử dụng</label>
                            <br />
                            <label>@Html.RadioButtonFor(q => q.Active, false, new { required = "required" }) Tạm dừng</label>
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    @Html.Label("Giá tiền", new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.TextBoxFor(model => model.GiaTien, new { @class = "form-control", required = "required", placeholder = "Giá tiền", type = "number", min = "1000",step="1000" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.Label("Đơn vị tính", new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.TextBoxFor(model => model.DonVi, new { @class = "form-control", required = "required", placeholder = "Cái" })
                    </div>
                </div>
                <div class="form-group">
                    @Html.Label("Ghi chú", new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.TextBoxFor(model => model.GhiChu, new { @class = "form-control", placeholder = "Ghi chú" })
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Hoàn thành" class="btn btn-success" />
                        @Html.ActionLink("Quay về trang quản lí", "Index", new { }, new { @class = "btn btn-default" })
                    </div>
                </div>
            </div>
        }
    </div>
</div>